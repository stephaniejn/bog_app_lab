
<div class="col-md-4 col-md-offset-4">

<h2> Add a New Creature </h2>
<br>
<div class="form-group">
<%= form_for @creature, html: {class: "form"} do |f| %>

   <%= f.text_field :name, :placeholder => "Creature Name", :class => "form-control"%>
   <%= f.text_field :description, :placeholder => "Creature Description", :class => "form-control" %>

   <%= f.submit %>

<% end %>

<%= link_to 'Back', creatures_path %>

</div>
</div>
</div>
</div>


<div class="col-md-4 col-md-offset-4">

<h2> Add a New Creature </h2>
<br>
<div class="form-group">
<%= form_for :creature, url: creatures_path do |f| %>
  <p>
   <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
   <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
   <%= f.submit "Add!", :class => "btn" %>

  </p>
<% end %>

<%= link_to 'Back', creatures_path %>

</div>
</div>
</div>
</div>
